<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.CrearAdminFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/imgCrearAdmin_AppName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/contImagen"
        android:src="@drawable/crearadmin_bg"
        app:layout_constraintBottom_toTopOf="@+id/gdCrearAdmin1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdCrearAdmin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <TextView
        android:id="@+id/tvCrearAdmin_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amadeus"
        android:text="@string/tvAnimalesSalvajes"
        android:textColor="#472C06"
        android:textSize="37sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gdCrearAdmin2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdCrearAdmin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <TextView
        android:id="@+id/tvCrearAdmin_Nombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amadeus"
        android:text="@string/tvTopTrump"
        android:textColor="#472C06"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCrearAdmin_Nombre" />

    <View
        android:id="@+id/viewCrearAdmin_BGTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/crearadmin_top"
        app:layout_constraintBottom_toTopOf="@+id/gdCrearAdmin1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewCrearAdmin_BGBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/crearadmin_bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gdCrearAdmin1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdCrearAdmin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdCrearAdmin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.835" />

    <TextView
        android:id="@+id/tvCrearAdmin_Info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/schoolbell"
        android:text="@string/tvIntroduceClave"
        android:textAlignment="center"
        android:textColor="#472C06"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gdCrearAdmin4"
        app:layout_constraintStart_toStartOf="@+id/gdCrearAdmin3"
        app:layout_constraintTop_toTopOf="@+id/gdCrearAdmin1" />

    <TextView
        android:id="@+id/tvCrearAdmin_Info2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/schoolbell"
        android:text="@string/tvAdvertenciaClave"
        android:textAlignment="center"
        android:textColor="#D3443A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gdCrearAdmin4"
        app:layout_constraintStart_toStartOf="@+id/gdCrearAdmin3"
        app:layout_constraintTop_toBottomOf="@+id/tvCrearAdmin_Info" />

    <View
        android:id="@+id/viewCrearAdmin_Entrar"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/acceder_bt_bg"
        app:layout_constraintBottom_toTopOf="@+id/gdCrearAdmin5"
        app:layout_constraintEnd_toStartOf="@+id/gdCrearAdmin4"
        app:layout_constraintStart_toStartOf="@+id/gdCrearAdmin3"
        app:layout_constraintTop_toBottomOf="@+id/etCrearAdmin_Clave" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdCrearAdmin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/tvCrearAdmin_Entrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/schoolbell"
        android:text="@string/textEntrar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="56sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewCrearAdmin_Entrar"
        app:layout_constraintEnd_toEndOf="@+id/viewCrearAdmin_Entrar"
        app:layout_constraintStart_toStartOf="@+id/viewCrearAdmin_Entrar"
        app:layout_constraintTop_toTopOf="@+id/viewCrearAdmin_Entrar" />

    <EditText
        android:id="@+id/etCrearAdmin_Clave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:background="@drawable/edittext_bg"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/schoolbell"
        android:hint="@string/tvClaveAcceso"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/gdCrearAdmin4"
        app:layout_constraintStart_toStartOf="@+id/gdCrearAdmin3"
        app:layout_constraintTop_toBottomOf="@+id/tvCrearAdmin_Info2" />

    <TextView
        android:id="@+id/tvCrearAdmin_Copyright"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/schoolbell"
        android:text="@string/tvTeamCopyright"
        android:textAlignment="center"
        android:textColor="#472C06"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewCrearAdmin_BGBottom"
        app:layout_constraintTop_toBottomOf="@+id/tvCrearAdmin_Error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCrearAdmin_Error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/schoolbell"
        android:textAlignment="center"
        android:textColor="#D3443A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvCrearAdmin_Copyright"
        app:layout_constraintTop_toBottomOf="@+id/gdCrearAdmin5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>