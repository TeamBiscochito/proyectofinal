<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="500dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDialogIrTutorial_Fuera"
            android:layout_width="400dp"
            android:layout_height="550dp"
            android:background="@drawable/jugadores_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDialogCartasPerfil"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDialogCartasNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/schoolbell"
                android:textAlignment="center"
                android:textColor="#472C06"
                android:textSize="42sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgDialogCartasPerfil"
                tools:text="Nombre" />

            <View
                android:id="@+id/viewDialogCartasEditar"
                android:layout_width="280dp"
                android:layout_height="75dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bt_editar_bg"
                app:layout_constraintBottom_toTopOf="@+id/viewDialogCartasBorrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/viewDialogCartasBorrar"
                android:layout_width="280dp"
                android:layout_height="75dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bt_eliminar_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDialogCartasEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/schoolbell"
                android:text="@string/tvEditar"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/viewDialogCartasEditar"
                app:layout_constraintEnd_toEndOf="@+id/viewDialogCartasEditar"
                app:layout_constraintStart_toStartOf="@+id/viewDialogCartasEditar"
                app:layout_constraintTop_toTopOf="@+id/viewDialogCartasEditar" />

            <TextView
                android:id="@+id/tvDialogCartasBorrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/schoolbell"
                android:text="@string/tvBorrarCorreo"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/viewDialogCartasBorrar"
                app:layout_constraintEnd_toEndOf="@+id/viewDialogCartasBorrar"
                app:layout_constraintStart_toStartOf="@+id/viewDialogCartasBorrar"
                app:layout_constraintTop_toTopOf="@+id/viewDialogCartasBorrar" />

            <TextView
                android:id="@+id/tvDialogCartasNoModifica"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/schoolbell"
                android:textAlignment="center"
                android:textColor="#6E6B66"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogCartasNombre" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewDialogCartasBack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/back_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>