<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/toast_bg">

    <TextView
        android:id="@+id/tvToastBateria_Alerta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/schoolbell"
        android:text="@string/alertBateriaAgotarse"
        android:textAlignment="center"
        android:textColor="#D3443A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgToastBateria_Bateria"
        app:layout_constraintEnd_toEndOf="@+id/tvToastBateria_Titulo"
        app:layout_constraintStart_toStartOf="@+id/tvToastBateria_Titulo"
        app:layout_constraintTop_toBottomOf="@+id/tvToastBateria_Titulo" />

    <ImageView
        android:id="@+id/imgToastBateria_Bateria"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/contBateria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvToastBateria_Titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_bateria" />

    <TextView
        android:id="@+id/tvToastBateria_Titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/schoolbell"
        android:text="@string/tvAnimalesSalvajes"
        android:textAlignment="center"
        android:textColor="#472C06"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvToastBateria_Alerta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgToastBateria_Bateria" />

</androidx.constraintlayout.widget.ConstraintLayout>